<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="@string/preference_location_key"
        android:title="@string/preference_location_title"
        android:defaultValue="@string/preference_location_default"
        android:inputType="text"
        android:singleLine="true"
        />
    <ListPreference
        android:key="@string/preference_temperature_key"
        android:title="@string/preference_temperature_title"
        android:entries="@array/temperature_unit_entries"
        android:entryValues="@array/temperature_unit_values"
        android:defaultValue="@string/temperature_unit_celsius_value"
        />
</PreferenceScreen>